<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpenAiModel.Views.FactsPage"
             xmlns:y="clr-namespace:OpenAiModel.Views"
             xmlns:z="clr-namespace:OpenAiModel.ViewModels"
             BackgroundColor="MintCream"
             
             Title="">
    <ScrollView>
    <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Fun Facts With Yoda"
                FontAttributes="Bold"
                Style="{StaticResource Headline}"
                />

            <Image
                Source="yodalogo.jpeg"
                HeightRequest="250"
                Aspect="AspectFit" />

            <Label
                Text="{ Binding Factshow.Content}"
                Style="{StaticResource SubHeadline}"
                TextColor="Black"
                />

            <Button
                Text="Fun Fact" 
                Command="{ Binding ShowFactCommand }"
                BackgroundColor="SteelBlue"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalOptions="CenterAndExpand" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>